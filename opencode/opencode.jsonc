{
	"$schema": "https://opencode.ai/config.json",
	"autoupdate": true,
	"model": "anthropic/claude-sonnet-4-6",
	"plugin": ["opencode-anthropic-auth@0.0.13"],
	"mcp": {
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"enabled": true,
			"headers": {
				"CONTEXT7_API_KEY": "{env:CONTEXT7_KEY}",
			},
		},
		"convex": {
			"type": "local",
			"enabled": true,
			"command": ["npx", "-y", "convex@latest", "mcp", "start"],
		},
		"traefik": {
			"type": "remote",
			"url": "https://mcp.skyanlabs.io/mcp",
			"enabled": true,
		},
		"tanstack": {
			"type": "local",
			"enabled": true,
			"command": ["npx", "-y", "@tanstack/cli", "mcp"],
		},
		"playwriter": {
			"type": "local",
			"enabled": true,
			"command": ["npx", "-y", "playwriter@latest"],
		},
	},
}
