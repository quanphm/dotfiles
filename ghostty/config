theme = Kanagawa Dragon

font-family = Departure Mono
font-size = 14
mouse-hide-while-typing=true

keybind = ctrl+\=new_split:right
keybind = ctrl+-=new_split:down

keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

keybind = ctrl+a>h=resize_split:left,20
keybind = ctrl+a>j=resize_split:down,20
keybind = ctrl+a>k=resize_split:up,20
keybind = ctrl+a>l=resize_split:right,20

keybind = cmd+shift+e=equalize_splits
keybind = cmd+shift+m=toggle_split_zoom

keybind = cmd+shift+n=new_tab
